<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAccountActivity"
        android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
            android:id="@+id/cardViewId"
            android:layout_centerInParent="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/chat_icon"
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryMedium"
                    android:text="@string/create_acct"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:background="@drawable/selector_bg_edit_2"
                        android:inputType="textPersonName"
                        android:id="@+id/CreateAccountDisplayNameEt"
                        android:hint="Display Name"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:paddingVertical="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:background="@drawable/selector_bg_edit_2"
                        android:inputType="textEmailAddress"
                        android:id="@+id/createAccountEmailEt"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:hint="Enter Email"
                        android:paddingVertical="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:background="@drawable/selector_bg_edit_2"
                        android:inputType="textEmailAddress"
                        android:id="@+id/createAccountPasswordEt"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:hint="Password"
                        android:paddingVertical="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                <Button
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:id="@+id/createAccountButtonId"
                        android:background="@drawable/bt_shape"
                        android:stateListAnimator="@drawable/state_list_animator_z"
                        android:text="Create New Account"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="20dp"
                        android:textColor="@color/colorPrimaryMedium"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>